# Server
NODE_ENV=production
PORT=3000

# SSL/TLS Certificate paths (required in production)
SSL_CERT_PATH=/etc/ssl/certs/bisswiz.crt
SSL_KEY_PATH=/etc/ssl/private/bisswiz.key
SSL_CA_PATH=/etc/ssl/certs/ca-bundle.crt

# Stripe (obtain from https://dashboard.stripe.com/apikeys)
STRIPE_SECRET_KEY=sk_live_...
STRIPE_PUBLISHABLE_KEY=pk_live_...
STRIPE_WEBHOOK_SECRET=whsec_...

# Bank Transfer
BANK_API_URL=https://api.yourbank.com/v1
BANK_API_KEY=your_bank_api_key
BANK_ACCOUNT_NUMBER=your_account_number
BANK_ROUTING_NUMBER=your_routing_number
BANK_TRANSFER_WEBHOOK_SECRET=your_bank_webhook_secret

# CORS - comma-separated list of allowed origins
ALLOWED_ORIGINS=https://bisswiz.com,https://www.bisswiz.com

# Rate limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
PAYMENT_RATE_LIMIT_MAX=10
