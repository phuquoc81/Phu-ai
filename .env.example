# ─── Stripe ───────────────────────────────────────────────────────────────────
# Obtain these from https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY=sk_test_REPLACE_ME
STRIPE_PUBLISHABLE_KEY=pk_test_REPLACE_ME

# Webhook signing secret – obtained when you register the endpoint in the
# Stripe Dashboard (Developers → Webhooks → Add endpoint)
STRIPE_WEBHOOK_SECRET=whsec_REPLACE_ME

# ─── Application ──────────────────────────────────────────────────────────────
PORT=3000
NODE_ENV=development

# Must be set to a long random string in production (used for session / CSRF)
SESSION_SECRET=change_this_to_a_long_random_string_in_production

# Comma-separated list of allowed origins for CORS (leave blank to allow same-origin only)
ALLOWED_ORIGINS=http://localhost:3000
